extends layout

block content
  h1= title
  p Tick the checkboxes of the Continents you have visited

  ul(class='checkboxes')
    each item in data
      li: label(for="checkbox")
        input(type="checkbox", name=item.continent, value=item.continent).form-control
        = item.continent
        ul
          each country in item.countries
            li: label(for="checkbox")
              input(type="checkbox", name=country, value=country).form-control
              = country
